@model IEnumerable<StockApp.WEB.Models.ProviderViewModel>

@{
    ViewBag.Title = "Providers";
}

<h2>Providers List</h2>

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<div class="btn-group">
    <a href="@Url.Action("Create")" class="myProvider btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i>  Create
    </a>
</div>

<table class="table table-bordered table-striped table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id=item.Id })" class="myProvider btn btn-info">
                    <i class="glyphicon glyphicon-pencil"></i> Edit
                </a>
                <a href="@Url.Action("Details", new {id=@item.Id })" class="myProvider btn btn-success">
                    <i class="glyphicon glyphicon-search"></i>  Details
                </a>
                <a href="@Url.Action("Delete", new { id=item.Id })" class="myProvider btn btn-danger">
                    <i class="glyphicon glyphicon-trash"></i> Delete
                </a>
            </td>
        </tr>
    }
</table>

@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".myProvider").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}
